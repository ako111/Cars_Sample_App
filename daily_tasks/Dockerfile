FROM python:2.7-stretch

COPY applyData.sh /
COPY sendJSON.py /
COPY sendCSV.py /
COPY users.csv /
COPY companies.csv /
COPY HTTPCodes.json /
COPY payloadResolve.json /

RUN mkdir /root/.ssh
RUN echo 'github.com ssh-rsa ' >> /root/.ssh/known_hosts

RUN pip install requests

RUN apt-get -y update
RUN apt-get -y install redis-tools
RUN apt-get -y install jq

CMD ["bash", "/applyData.sh"]
